# Target to ping
TARGET=google.com

# Log file (absolute or relative)
LOG_FILE=ping_speed_log.txt

# Email SMTP (optional; leave empty to disable email reports)
EMAIL_SENDER=you@example.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_RECEIVER=you@example.com
SMTP_SERVER=smtp.yandex.com.tr
SMTP_PORT=465

# Telegram bot (optional; leave empty to disable Telegram alerts)
TG_BOT_TOKEN=123456:ABC-DEMO-TOKEN
TG_CHAT_ID=123456789

# Schedules & tuning (optional)
DAILY_REPORT_TIME=09:57        # HH:MM (24h)
PING_INTERVAL_SECONDS=3
PING_TIMEOUT_SECONDS=1
TIMEOUT_ALERT_THRESHOLD=5       # consecutive timeouts to trigger alert
SPEEDTEST_EVERY_HOURS=6
